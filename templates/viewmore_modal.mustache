{{!
    @template tool_awsconnect/content_modal

    Example context (json):
    {
        "id" : 1,
        "url" : http://i.annihil.us/u/prod/marvel/i/mg/c/e0/535fecbbb9784.jpg,
        "name" : "3-D Man",
        "description" : 'Hello my name is Guillermo and I'm a super hero, don't tell anyone.'
    }
}}
<!-- Button trigger modal -->
<a href="#" data-toggle="modal" data-target="#contentModal-{{id}}">
    {{#pix}} i/search, core, {{#str}} table:details, mod_marvel {{/str}} {{/pix}}
</a>

<!-- Modal -->
<div class="modal fade" id="contentModal-{{id}}" tabindex="-1" role="dialog" aria-labelledby="contentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contentModalLabel">{{name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-7">
                        <img src="{{url}}" class="img-thumbnail" width="500" alt="{{name}}">
                    </div>
                    <div class="col-5">
                        <div class="w-100 text-center mb-3">{{name}}</div>
                        <div>{{description}}</div>
                    </div>
                </div>
                <div class="row">
                    <table class="table m-4">
                        <tbody>
                        {{#moreinfo}}
                        <tr>
                            <th scope="row">{{name}}</th>
                            <td>{{count}}</td>
                        </tr>
                        {{/moreinfo}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>